@model SupportMe.DTOs.PaymentDTOs.PaymentDetailDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmación de Donación</title>
    <style type="text/css">
        /* Estilos de respaldo que algunos clientes pueden usar */
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Inter', Arial, sans-serif;
            background-color: #F9FAFB;
            color: #111827;
        }
        
        table {
            border-spacing: 0;
            border-collapse: collapse;
            mso-table-lspace: 0pt;
            mso-table-rspace: 0pt;
        }
        
        td {
            padding: 0;
        }
        
        img {
            border: 0;
            line-height: 100%;
            outline: none;
            text-decoration: none;
            display: block;
        }
        
        @@media (max-width: 600px) {
            .container {
                width: 100% !important;
            }
            
            .card {
                border-radius: 0 !important;
                border-left: 0 !important;
                border-right: 0 !important;
            }
            
            .mobile-padding {
                padding: 15px !important;
            }
            
            .mobile-center {
                text-align: center !important;
            }
        }
    </style>
</head>
<body style="margin: 0; padding: 0; background-color: #F9FAFB; color: #111827; font-family: 'Inter', Arial, sans-serif; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;">

<!-- Contenedor principal -->
<div style="width: 100%; table-layout: fixed;">
    <div style="max-width: 600px; margin: 0 auto; padding: 20px;">
        <!-- Tarjeta -->
        <table class="card" width="100%" cellpadding="0" cellspacing="0" style="background-color: #FFFFFF; border-radius: 12px; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); border: 1px solid #E5E7EB; overflow: hidden;">
            <!-- Cabecera -->
            <tr>
                <td style="background-color: #6366F1; padding: 24px 30px; color: #FFFFFF; position: relative; text-align: center;">
                    <h2 style="font-size: 22px; font-weight: 600; margin: 0; letter-spacing: 0.2px;">¡Gracias por tu donación!</h2>
                </td>
            </tr>
            
            <!-- Cuerpo de la tarjeta -->
            <tr>
                <td class="mobile-padding" style="padding: 30px;">
                    <!-- Confirmación principal -->
                    <table width="100%" cellpadding="0" cellspacing="0">
                        <tr>
                            <td align="center" style="padding-bottom: 25px;">
                                
                                <h3 style="font-size: 18px; font-weight: 600; color: #111827; margin: 0 0 15px 0;">
                                    Tu donación ha sido procesada exitosamente
                                </h3>
                                
                                <p style="font-size: 16px; color: #6B7280; margin: 0 0 30px 0; line-height: 1.5;">
                                    Hemos recibido tu donación por <span style="font-weight: 700; color: #111827;">$ @Model.Amount.ToString("N2")</span> para la campaña:
                                </p>
                                
                                <div style="background-color: #F3F4F6; border-radius: 12px; padding: 20px; margin-bottom: 25px; border-left: 3px solid #6366F1;">
                                    <p style="font-size: 18px; font-weight: 600; color: #111827; margin: 0;">
                                        @Model.CampaignName
                                    </p>
                                </div>
                            </td>
                        </tr>
                        
                        <!-- Información básica -->
                        <tr>
                            <td>
                                <table width="100%" cellpadding="0" cellspacing="0" style="border: 1px solid #E5E7EB; border-radius: 12px; overflow: hidden;">
                                    <tr>
                                        <td style="background-color: #F9FAFB; padding: 12px 15px; border-bottom: 1px solid #E5E7EB;">
                                            <table width="100%" cellpadding="0" cellspacing="0">
                                                <tr>
                                                    <td style="font-size: 14px; color: #6B7280;">
                                                        Fecha
                                                    </td>
                                                    <td align="right" style="font-weight: 600; color: #111827;">
                                                        @Model.Date.ToString("dd MMM, yyyy")
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>

                                    <tr>
                                        <td style="background-color: #F9FAFB; padding: 12px 15px;">
                                            <table width="100%" cellpadding="0" cellspacing="0">
                                                <tr>
                                                    <td style="font-size: 14px; color: #6B7280;">
                                                        Estado
                                                    </td>
                                                    <td align="right" style="font-weight: 600; color: #10B981;">
                                                        Completada
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                        
                        <!-- Mensaje de agradecimiento -->
                        <tr>
                            <td style="padding-top: 30px; text-align: center;">
                                <p style="font-size: 16px; color: #6B7280; margin: 0 0 25px 0; line-height: 1.6;">
                                    Gracias por tu generosidad. Tu contribución ayudará a hacer una diferencia importante.
                                </p>
                                
                                @if (!string.IsNullOrEmpty(Model.Comment))
                                {
                                    <table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 25px;">
                                        <tr>
                                            <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px; text-align: left;">
                                                Tu mensaje
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="background-color: #F3F4F6; border-radius: 12px; padding: 15px; font-style: italic; border-left: 3px solid #6366F1; text-align: left;">
                                                @Model.Comment
                                            </td>
                                        </tr>
                                    </table>
                                }
                                
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>
        
        <!-- Pie de página -->
        <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 20px;">
            <tr>
                <td align="center" style="color: #6B7280; font-size: 12px; padding: 10px;">
                    © @DateTime.Now.Year Supportme. Todos los derechos reservados.
                </td>
            </tr>
            <tr>
                <td align="center" style="color: #6B7280; font-size: 12px; padding: 10px;">
                    Si tienes alguna pregunta, contáctanos a <a href="mailto:soporte@supportme.com" style="color: #6366F1; text-decoration: none;">soporte@supportme.com</a>
                </td>
            </tr>
        </table>
    </div>
</div>

</body>
</html>