@model SupportMe.DTOs.PaymentDTOs.PaymentDetailDTO
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Detalle de Donación</title>
    <style type="text/css">
        /* Estilos de respaldo que algunos clientes pueden usar */
        body, html {
            margin: 0;
            padding: 0;
            font-family: 'Inter', Arial, sans-serif;
            background-color: #F9FAFB;
            color: #111827;
        }
        
        table {
            border-spacing: 0;
            border-collapse: collapse;
            mso-table-lspace: 0pt;
            mso-table-rspace: 0pt;
        }
        
        td {
            padding: 0;
        }
        
        img {
            border: 0;
            line-height: 100%;
            outline: none;
            text-decoration: none;
            display: block;
        }
        
        .hide-in-desktop {
            display: none;
            max-height: 0;
            overflow: hidden;
        }
        
    </style>
</head>
<body style="margin: 0; padding: 0; background-color: #F9FAFB; color: #111827; font-family: 'Inter', Arial, sans-serif; -webkit-text-size-adjust: 100%; -ms-text-size-adjust: 100%;">

<!-- Contenedor principal -->
<div style="width: 100%; table-layout: fixed;">
    <div style="max-width: 600px; margin: 0 auto; padding: 20px;">
        <!-- Tarjeta -->
        <table class="card" width="100%" cellpadding="0" cellspacing="0" style="background-color: #FFFFFF; border-radius: 12px; box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); border: 1px solid #E5E7EB; overflow: hidden;">
            <!-- Cabecera -->
            <tr>
                <td style="background-color: #6366F1; padding: 24px 30px; color: #FFFFFF; position: relative;">
                    <h2 style="font-size: 20px; font-weight: 600; margin: 0; letter-spacing: 0.2px;">Detalle de Donación</h2>
                    <!-- Triángulo decorativo para clientes que lo soportan -->
                    <div style="position: relative;">
                        <div style="position: absolute; top: 24px; left: 30px; width: 0; height: 0; border-left: 10px solid transparent; border-right: 10px solid transparent; border-top: 10px solid #6366F1;"></div>
                    </div>
                </td>
            </tr>
            
            <!-- Cuerpo de la tarjeta -->
            <tr>
                <td class="mobile-padding" style="padding: 30px;">
                    <!-- Sección de monto y estado -->
                    <table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 25px; border-bottom: 1px solid #E5E7EB; padding-bottom: 20px;">
                        <tr>
                            <!-- Monto -->
                            <td class="mobile-padding-bottom" style="font-size: 32px; font-weight: 700; color: #111827;">
                                $ @Model.Amount.ToString("N2")
                            </td>
                            
                            <!-- Estado -->
                            <td align="right">
                                <table cellpadding="0" cellspacing="0" style="margin-left: auto;">
                                    <tr>
                                        @if (Model.Status?.ToLower() == "ok" || Model.Status?.ToLower() == "successful" || Model.Status?.ToLower() == "completed")
                                        {
                                            <td style="background-color: rgba(16, 185, 129, 0.1); border-radius: 30px; padding: 8px 16px; color: #10B981; font-size: 14px; font-weight: 600;">
                                                <table cellpadding="0" cellspacing="0">
                                                    <tr>

                                                        <td style="padding-left: 6px;">
                                                            OK
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        }
                                        else
                                        {
                                            <td style="background-color: rgba(239, 68, 68, 0.1); border-radius: 30px; padding: 8px 16px; color: #EF4444; font-size: 14px; font-weight: 600;">
                                                <table cellpadding="0" cellspacing="0">
                                                    <tr>

                                                        <td style="padding-left: 6px;">
                                                            Error
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        }
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    
                    <!-- Grid de información -->
                    <table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 25px;">
                        <tr>
                            <!-- Columna 1 -->
                            <td class="stacked-column" width="48%" valign="top" style="padding-right: 4%;">
                                <!-- Método de pago -->
                                <table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 20px;">
                                    <tr>
                                        <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px;">
                                            Método de pago
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: 600; color: #111827; padding-bottom: 10px;">
                                            Tarjeta de crédito
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="background-color: #F3F4F6; padding: 14px; border-radius: 12px;">
                                            <table cellpadding="0" cellspacing="0">
                                                <tr>
                                                    <td style="padding-left: 12px;">
                                                       @Model.Brand •••• @Model.Last4
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                                
                                <!-- Fecha -->
                                <table width="100%" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px;">
                                            Fecha de transacción
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <table cellpadding="0" cellspacing="0">
                                                <tr>
                                                    <td style="padding-left: 8px; font-weight: 600; color: #111827;">
                                                        @Model.Date.ToString("dd MMM, yyyy, h:mm tt")
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                            
                            <!-- Columna 2 -->
                            <td class="stacked-column" width="48%" valign="top">
                                <!-- Campaña -->
                                <table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 20px;">
                                    <tr>
                                        <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px;">
                                            Campaña
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: 600; color: #111827;">
                                            <span style="font-size: 14px; font-weight: 500;">@Model.CampaignName</span>
                                        </td>
                                    </tr>
                                </table>
                                
                                <!-- Cliente -->
                                <table width="100%" cellpadding="0" cellspacing="0">
                                    <tr>
                                        <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px;">
                                            Cliente
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="font-weight: 600; color: #111827;">
                                            @Model.DonatorName
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    
                    <!-- Sección de comisiones (solo si hay valores) -->
                    @if ((Model.CommissionSupportMe.HasValue && Model.CommissionSupportMe.Value != 0) || 
                         (Model.CommissionMP.HasValue && Model.CommissionMP.Value != 0))
                    {
                        <table width="100%" cellpadding="0" cellspacing="0" style="margin-bottom: 25px; border-bottom: 1px solid #E5E7EB; padding-bottom: 20px;">
                            <tr>
                                <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px;">
                                    Detalle de comisiones
                                </td>
                            </tr>
                            <tr>
                                <td style="background-color: #F3F4F6; border-radius: 12px; padding: 5px;">
                                    <table width="100%" cellpadding="0" cellspacing="0">
                                        @if (Model.CommissionSupportMe.HasValue && Model.CommissionSupportMe.Value != 0)
                                        {
                                            <tr>
                                                <td style="padding: 12px 15px; @(Model.CommissionMP.HasValue && Model.CommissionMP.Value != 0 ? "border-bottom: 1px solid rgba(229, 231, 235, 0.5);" : "")">
                                                    <table width="100%" cellpadding="0" cellspacing="0">
                                                        <tr>
                                                            <td style="font-size: 14px; color: #111827;">
                                                                Comisión de plataforma
                                                            </td>
                                                            <td align="right" style="font-weight: 600; color: #111827;">
                                                                $ @Model.CommissionSupportMe.Value.ToString("N2")
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        }
                                        
                                        @if (Model.CommissionMP.HasValue && Model.CommissionMP.Value != 0)
                                        {
                                            <tr>
                                                <td style="padding: 12px 15px;">
                                                    <table width="100%" cellpadding="0" cellspacing="0">
                                                        <tr>
                                                            <td style="font-size: 14px; color: #111827;">
                                                                Comisión de procesamiento
                                                            </td>
                                                            <td align="right" style="font-weight: 600; color: #111827;">
                                                                $ @Model.CommissionMP.Value.ToString("N2")
                                                            </td>
                                                        </tr>
                                                    </table>
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </td>
                            </tr>
                        </table>
                    }
                    
                    <!-- Total recibido -->
                    <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 25px;">
                        <tr>
                            <td style="font-size: 14px; color: #6B7280; font-weight: 500;">
                                Total recibido
                            </td>
                            <td align="right" style="font-size: 22px; font-weight: 700; color: #10B981;">
                                $ @Model.NetReceived.ToString("N2")
                            </td>
                        </tr>
                    </table>
                    
                    <!-- Palabras de apoyo (solo si existe) -->
                    @if (!string.IsNullOrEmpty(Model.Comment))
                    {
                        <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 25px;">
                            <tr>
                                <td style="font-size: 14px; color: #6B7280; margin-bottom: 8px; font-weight: 500; padding-bottom: 8px;">
                                    Palabras de apoyo
                                </td>
                            </tr>
                            <tr>
                                <td style="background-color: #F3F4F6; border-radius: 12px; padding: 20px; font-style: italic; border-left: 3px solid #6366F1;">
                                    @Model.Comment
                                </td>
                            </tr>
                        </table>
                    }
                </td>
            </tr>
        </table>
        
        <!-- Pie de página -->
        <table width="100%" cellpadding="0" cellspacing="0" style="margin-top: 20px;">
            <tr>
                <td align="center" style="color: #6B7280; font-size: 12px; padding: 10px;">
                    © @DateTime.Now.Year Supportme. Todos los derechos reservados.
                </td>
            </tr>
        </table>
    </div>
</div>

</body>
</html>